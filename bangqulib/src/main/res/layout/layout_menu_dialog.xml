<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.bangqu.lib.widget.UnScrollListView
        android:id="@+id/dialog_menu_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:background="@drawable/shape_menu_dialog_bg"
        android:divider="#CCCCCC"
        android:dividerHeight="1dp"
        android:listSelector="#00000000" />

    <TextView
        android:id="@+id/dialog_menu_cancel"
        style="@style/text_menu_dialog"
        android:layout_marginBottom="4dp"
        android:background="@drawable/shape_menu_dialog_item"
        android:text="@string/cancel" />

</LinearLayout>