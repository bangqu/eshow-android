<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/main_tab_bg"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/main_tab_image"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="4dp"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/main_tab_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/main_tab_image"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp"
        android:textColor="@color/main_tab_text"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/main_tab_msg"
        android:layout_width="wrap_content"
        android:layout_height="14dp"
        android:layout_marginLeft="-8dp"
        android:layout_toRightOf="@id/main_tab_image"
        android:background="@drawable/shape_r7_solid_red"
        android:gravity="center"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:textColor="@color/color_white"
        android:textSize="10sp"
        android:visibility="gone" />

</RelativeLayout>