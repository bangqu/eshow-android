<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/button_red_press" />
            <stroke android:width="0dp" android:color="@color/button_red_press" />
            <corners android:radius="5dp" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/button_red_disable" />
            <stroke android:width="0dp" android:color="@color/button_red_disable" />
            <corners android:radius="5dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/button_red_normal" />
            <stroke android:width="0dp" android:color="@color/button_red_normal" />
            <corners android:radius="5dp" />
        </shape>
    </item>
</selector>